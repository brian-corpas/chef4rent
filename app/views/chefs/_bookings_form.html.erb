<%= simple_form_for(@booking, url: chef_bookings_path(@chef), method: :post) do |f| %>
  <%= f.input :start_date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :end_date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :nr_guests %>
  <%= f.input :location %>
  <%= f.input :event_details %>
  <%= f.button :submit, id:"button-book" %>
  <button type="button" class="btn-back" data-dismiss="modal">Close</button>
<% end %>
