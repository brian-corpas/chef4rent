<%= simple_form_for(@booking, url: chef_bookings_path(@chef), method: :post) do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :nr_guests %>
  <%= f.input :location %>
  <%= f.input :event_details %>
  <%= f.button :submit, id:"btn-create-booking" %>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
<% end %>
