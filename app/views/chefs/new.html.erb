
<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 style="text-align: center;">Input your chef details</h1>
    <%= simple_form_for @chef do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :category %>
      <%= f.input :price_range, collection: ["$", "$$", "$$$", "$$$$"], prompt: "Select your price range" %>
      <%= f.input :location %>
      <div class="row d-flex justify-content-center">
        <div class="col-align-self-center">
          <div>
             <%= f.button :submit, "Update", id:"button-book" %>
          </div>
        </div>
      </div>
    <% end %>
        <div class="container mt-5 pt-4">
            <div class="row d-flex justify-content-center">
             <div class="col-align-self-center">
                <div>
                    <%= link_to "Back", profile_path, :class => "btn-back"%>
                </div>
             </div>
           </div>
        </div>
    </div>
  </div>
</div>


