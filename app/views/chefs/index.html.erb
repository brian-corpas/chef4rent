<div class="header">
<h1>Find an amazing chef for your dinnerparty</h1>
</div>

<div class="container">
  <div class="row">
    <%@chefs.each do |chef| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <h2><%= link_to chef.name, chef_path(chef.id) %></h2>
          <p><%= chef.category %></p>
          <p><%= chef.price_range %></p>
          <p><%= chef.location %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

