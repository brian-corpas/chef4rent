




<div class="chef-banner">
  <div class="chef-banner-text">
    <h2><%= @chef.name %></h2>
    <%=  @chef.category.name %>
  </div>
</div>
<div class="container mt-2 p-2 d-flex justify-content-between">
  <div class="row justify-content-center">
    <div class="col-12">
      <p>Price Range - <%= @chef.price_range %></p>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <p>Address - <%= @chef.location %></p>
    </div>
  </div>
</div>

<div class="container border-top pt-3">
  <div class="row justify-content-center">
    <div class="col-12">
      <p class="text-justify"><%= @chef.description %></p>
    </div>
  </div>
</div>

<div class="container mt-5 pt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <button type="button" id="button-book" data-toggle="modal" data-target="#exampleModalLong">
        Book me
      </button>
    </div>
  </div>
</div>

<div class="container mt-5 pt-4">
    <div class="row d-flex justify-content-center">
     <div class="col-align-self-center">
        <%= link_to "Back", chefs_path(category_name: @chef.category.name), :class => "btn-back"%>
     </div>
   </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Booking Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "bookings_form" %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>



